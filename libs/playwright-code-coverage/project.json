{
  "name": "playwright-code-coverage",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/playwright-code-coverage",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": ["dist/{projectRoot}"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "options": {
        "outputPath": "dist/libs/playwright-code-coverage",
        "main": "libs/playwright-code-coverage/index.ts",
        "tsConfig": "libs/playwright-code-coverage/tsconfig.lib.json",
        "assets": ["libs/playwright-code-coverage/*.md"]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    }
  }
}
