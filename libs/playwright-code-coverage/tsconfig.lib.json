{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["index.ts", "src/**/*.ts"],
  "exclude": [
    "vite.config.ts",
    "vite.config.mts",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/*.spec.js",
    "src/**/*.spec.jsx"
  ]
}
