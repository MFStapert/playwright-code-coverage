{
  "name": "angular-client-app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "client",
  "sourceRoot": "apps/angular-client-app/src",
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/angular-client-app",
        "browser": "apps/angular-client-app/src/main.ts",
        "tsConfig": "apps/angular-client-app/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/angular-client-app/public"
          }
        ],
        "styles": ["apps/angular-client-app/src/styles.css"]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "angular-client-app:build:production"
        },
        "development": {
          "buildTarget": "angular-client-app:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "angular-client-app:build",
        "port": 4200,
        "staticFilePath": "dist/apps/angular-client-app/browser",
        "spa": true
      }
    }
  }
}
