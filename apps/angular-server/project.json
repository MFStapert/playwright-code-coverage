{
  "name": "angular-server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "server",
  "sourceRoot": "apps/angular-server/src",
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "build": {
      "executor": "@angular/build:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/angular-server",
        "browser": "apps/angular-server/src/main.ts",
        "tsConfig": "apps/angular-server/tsconfig.app.json",
        "server": "apps/angular-server/src/main.server.ts",
        "ssr": {
          "entry": "apps/angular-server/src/server.ts"
        },
        "outputMode": "server",
        "optimization": false,
        "extractLicenses": false,
        "sourceMap": true
      }
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "options": {
        "buildTarget": "angular-server:build",
        "port": 4200
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "angular-server:build",
        "port": 4200,
        "staticFilePath": "dist/apps/angular-server/browser",
        "spa": true
      }
    }
  }
}
